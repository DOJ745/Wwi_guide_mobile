<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.YearsFragment"
    android:layout_marginHorizontal="@dimen/fragment_horizontal_margin">

    <Button
        android:visibility="visible"
        android:id="@+id/years_fragment_button"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/years_fragment_button"
        android:layout_above="@id/years_fragment_bottom_nav">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/years_fragment_year_list"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/years_fragment_bottom_nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/years_fragment_bottom_nav"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/navigation_items"/>

</RelativeLayout>
