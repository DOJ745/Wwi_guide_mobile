            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_data_survey_question_text"
            tools:layout_constraintTop_toBottomOf="@id/fragment_data_survey_question_text">

            <RadioButton
                android:id="@+id/fragment_data_answer1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
