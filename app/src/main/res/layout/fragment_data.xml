        <TextView
            android:id="@+id/fragment_data_survey_question_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:layout_marginTop="@dimen/half_main_margin"
            android:layout_marginBottom="@dimen/half_main_margin"
            android:contentDescription="@string/img_description"
            android:id="@+id/fragment_data_survey_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/fragment_data_survey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragment_data_title"
