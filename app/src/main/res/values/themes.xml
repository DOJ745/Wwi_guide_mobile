<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wwi_guide_mobile" parent="Theme.MaterialComponents"> <!-- .DayNight.DarkActionBar -->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/old_paper</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/cherry_red</item>

        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/old_paper</item>

        <item name="android:fontFamily">@font/old_type_nr_regular</item>
        <item name="android:textSize">@dimen/default_font_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:buttonStyle">@style/BtnNoCaps</item>
    </style>

    <style name="AppTheme.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_drawable</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@color/orange</item>
        <item name="boxStrokeColor">@color/cherry_red</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>

    <style name="TextShadowStyle" parent="Widget.AppCompat.TextView">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">8.0</item>
        <item name="android:shadowDy">8.0</item>
        <item name="android:shadowRadius">0.8</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BtnNoCaps" parent="android:Widget.Button">
        <item name="android:textAllCaps">false</item>
    </style>

</resources>